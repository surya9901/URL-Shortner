<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortner</title>

    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>

  <!-- Fontawesome -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    integrity="sha512-SfTiTlX6kk+qitfevl/7LibUOeJWlt9rbyDn92a1DqWOw9vWG2MFoays0sgObmWazO5BQPiFucnnEAjpAB+/Sw=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />

  <body>
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1>URL SHORTNER</h1>
        </div>
      </div>

      <form action="/create" method="POST">
        <div class="row">
          <div class="input-group mb-3">
            <input
              type="text"
              name="longurl"
              class="form-control"
              placeholder="Paste the URL which needs to be Shortned here..."
              aria-label="Recipient's username"
              aria-describedby="button-addon2"
            />
            <input
              type="submit"
              class="btn btn-outline-secondary"
              value="Submit"
            />
          </div>
        </div>
      </form>

      <% for(let i=0;i< urlResult.length;i++) { %>
      <ol class="list-group list-group-numbered">
        <li
          class="
            list-group-item
            d-flex
            justify-content-between
            align-items-start
          "
        >
          <div class="ms-2 me-auto">
            <div class="fw-bold">
              <a
                href="https://gshort-urlshortner.herokuapp.com/<%= urlResult[i].shortUrl %>"
                target="_blank"
              >
                Gshort.ly/<%= urlResult[i].shortUrl %></a
              >
            </div>
            <%= urlResult[i].longUrl %>
          </div>
          <div class="count">
            <small>Total Click: </small>
            <span class="badge bg-primary rounded-pill">
              <%= urlResult[i].clickCount %>
            </span>
            <span class="badge bg-danger rounded-pill">
              <a
                href="/delete/<%= urlResult[i].id %>"
                style="text-decoration: none"
                ><i
                  class="fa fa-trash-o"
                  style="color: whitesmoke"
                  aria-hidden="true"
                ></i> </a
            ></span>
          </div>
        </li>
      </ol>
      <% } %>
    </div>
  </body>
</html>
